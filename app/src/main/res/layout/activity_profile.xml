<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jisa.stepintwoit.ui.activity.ProfileActivity">
<TextView
    android:id="@+id/txt_profile_emailtext"
    android:layout_width="wrap_content"
    android:text="Email Id:"
    android:layout_height="wrap_content"
    />
    <TextView
        android:id="@+id/txt_profile_email"
        android:layout_below="@+id/txt_profile_emailtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btn_profile_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txt_profile_email"
        android:text="Logout"
        tools:layout_editor_absoluteX="291dp"
        tools:layout_editor_absoluteY="3dp" />
    <ImageView
        android:id="@+id/img_profile_image"
        android:layout_width="wrap_content"
        android:maxWidth="25dp"
        app:srcCompat="@drawable/img"
        android:maxHeight="20dp"
        android:layout_below="@+id/btn_profile_logout"
        android:layout_height="wrap_content" />
</RelativeLayout>
